block lateral
	.wrap-l(id="sidr")
		.lat-header(ng-controller="accesoModificarDatosCtrl")
			.foto(ng-click="mover($event)")
				img(src="{{userPicture}}",alt="{{userPicture}}")
				i.fa(class="fa-user fa-5x",ng-show="userPicture == 'null'||userPicture==null")
			.data-user(class="well")|{{userName}}
				br
				strong|{{userJob}}
		.lat-content
			ul.list-group(id="accesos")
				case idTipoUser
					when '6'//postulante
						include includes/enlaceModificarDatos
					when '2'//RRHH
						include includes/enlaceModificarDatos
					default
						include includes/enlaceModificarDatos
		.lat-footer
