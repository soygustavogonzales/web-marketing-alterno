extends layout
block head
	link(rel="stylesheet", href="/sismarketing/application/views/public/styles/bootstrap/css/bootstrap.min.css")
	link(rel="stylesheet", href="/sismarketing/application/views/public/styles/bootstrap/css/bootstrap-theme.min.css")
	link(rel="stylesheet", href="/sismarketing/application/views/public/styles/fonts/font-awesome-4.0.3/css/font-awesome.min.css")
	link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Anaheim")
	style
		#web{
		width:100%;
		height:800px;
		}
			.form{
				padding:10px;
				margin:0 30%;
				width:40%;
			}
			.form-control-feedback{
				position:absolute;
				top:.4em;
				left:86%;				
				vertical-align:middle;
			}
			input{
			padding: 0 2.8em 0 0.8em;
			}
 block content
	div#web
		div.well(class="col-md-6 form")
			div.row
				div.form-horizontal
					div.form-group(class="has-success has-feedback")
						label.control-label(for="name",class="col-sm-3")|Your name
						div.col-sm-6
							input.form-control(type="email",id="name")
							span.glyphicon(class="glyphicon-ok form-control-feedback")	
script(src="/sismarketing/application/views/public/styles/bootstrap/js/bootstrap.min.js")
